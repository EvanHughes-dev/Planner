   function daysInMonth (month, year) {
                return new Date(year, month, 0).getDate();


                     }
   function Day(date, month, year){

DayOfWeek = new Date(year, month, 0).getDay();
    var DayTemp = 1;



MonthBefore = new Date(year, month - 1, 0);
MonthAfter = new Date(year, month + 1, 0);
     for (i = 0; i< DatesForCalender.length; ){
        if (i + 1 < DayOfWeek ){
          DatesForCalender[i] = MonthBefore.getDate()-DayOfWeek+i+2;

        } else if (i + 1 >= DayOfWeek && i+1< DayOfWeek + daysInMonth(year, month) ){

          DatesForCalender[i] = DayTemp;
          DayTemp++;
        }else if (i <= 41 && i+1 >= DayOfWeek + daysInMonth(year, month) ){
         DatesForCalender[i] = 2 + (42-DayOfWeek-daysInMonth(year, month))-(42-i);
        }

       i++;
     }

   }
